= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :pin
    = f.number_field :pin
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :date_od_birth
    = f.date_field :date_od_birth
  .actions
    = f.submit 'Save'
