%h1 Listing profiles



%table.table
  %thead
    %tr
      %th{:scope => "col"} First name
      %th{:scope => "col"} Last name
      %th{:scope => "col"} Bio
      %th{:scope => "col"} User
      %th{:scope => "col"} Address
      %th{:scope => "col"} Pin
      %th{:scope => "col"} Phone
      %th{:scope => "col"} Country
      %th{:scope => "col"} State
      %th{:scope => "col"} Date od birth
      %th{:scope => "col"} View
      %th{:scope => "col"} Edit
      %th{:scope => "col"} Delete

  %tbody
    - @profiles.each do |profile|
      %tr
        %td= profile.first_name
        %td= profile.last_name
        %td= profile.bio
        %td= profile.user_id
        %td= profile.address
        %td= profile.pin
        %td= profile.phone
        %td= profile.country
        %td= profile.state
        %td= profile.date_od_birth
        %td= link_to 'Show', profile
        %td= link_to 'Edit', edit_profile_path(profile)
        %td= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Profile', new_profile_path
